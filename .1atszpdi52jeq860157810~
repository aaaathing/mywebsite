        <title>Catch the button</title>
        <style>
            #subtitle{
                animation-name:bluered;
                animation-duration:10s;
                animation-iteration-count: infinite;
            }
            @keyframes bluered{
                0%{color:red;}
                50%{color:blue;}
                100%{color:red;}
            }
            #title{
                background-color:#ddd;
                width:280px;
                transition-duration:1s;
            }
            #title:hover{
                transform:scaleY(2);
            }
            #title:active{
                transform:scale(2,2);
            }
            #popup{
                display:none;
                position:absolute;
                top:70px;
                border:solid black;
                background:white;
                width:500px;
                height:300px;
                overflow:scroll;
            }
            .card{
                border:solid;
                width:100px;
                height:100px;
                background:#fe9;
                display:inline-block;
            }
            #catch{
                border:1px solid;
                width:80px;
                height:20px;
                background:#ddd;
                overflow:hidden;
                cursor:pointer;
                user-select: none;
            }
            #close{
                float:right;
                padding-top:10px;
                padding-right:10px;
                position:sticky;
                top:0px;
            }
        </style>
