    <body>
        <h1 id="title">Catch the button</h1>
        <span id="subtitle">A game where you catch that button!</span>
        <br>
        <div id="catch"onclick="ipressed()">Catch me!</div>
        <br>
        <b id="message">score: 0</b>
        <br>
        <button onclick="shop()">Open shop</button>
        
        <div id="popup">
            <svg width="10"height="10"onclick="closeshop()" id="close">
                <line x1="0" y1="0" x2="10" y2="10" style="stroke:rgb(255,0,0);stroke-width:2" />
                <line x1="0" y1="10" x2="10" y2="0" style="stroke:rgb(255,0,0);stroke-width:2" />
            </svg>
            
            <h1>Shop</h1><br>
            Click an item to buy it.<br>
            <h4>Cards:</h4><br>
            
            <div class="card"onclick="buy('slow');closeshop()"><b>Card:</b><br>Slower button<br><br>Cost: 20</div>
            <div class="card"onclick="buy('biger');closeshop()"><b>Card:</b><br>Bigger button<br><br>Cost: 50</div>
            
            <h4>Machines:</h4><br>
        </div>
        
        <script>
            var size=1;
            var x=0;
            var speed=5;
            var velocity = speed;
            var score=0;
            var interval = setInterval(move,10);
            function move(){
                x+=velocity;
                if(x>400){
                    velocity=-speed;
                }
                if(x<0){
                    velocity=speed;
                }
                document.getElementById("catch").style.transform= "translateX("+x+"px)";
            }
            function ipressed(){
                score++;
                document.getElementById("message").innerHTML="You clicked it! score: "+score;
                
                
            }
            function shop(){
                document.getElementById("popup").style.display="block";
                
            }
            function closeshop(){
                document.getElementById("popup").style.display="none";
            }
            function buy(what){
                if(what="slow"&&score>19&&speed>1){
                    score-=20;
                    speed--;
                    return(what);
                }else if(what="biger"&&score>49&&size<3){
                    score-=50;
                    size+=0.5;
                    document.getElementById("catch").style.scale=size+","+size;
                }
                document.getElementById("message").innerHTML="You clicked it! score: "+score;
            }
        </script>

    </body>
